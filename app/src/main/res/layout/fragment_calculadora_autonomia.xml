<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@android:color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calculadora de Autonomia"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:textColor="@android:color/black"/>

        <EditText
            android:id="@+id/edt_capacidade_tanque"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capacidade Total do Tanque (litros)"
            android:inputType="numberDecimal"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/spinner_tipo_combustivel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <Spinner
            android:id="@+id/spinner_quantidade_motores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <TextView
            android:id="@+id/tv_velocidade_cruzeiro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Velocidade de Cruzeiro: "
            android:textSize="16sp"
            android:layout_marginBottom="16dp"
            android:textColor="@android:color/black"/>

        <TextView
            android:id="@+id/tv_consumo_hora"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Consumo por Hora: "
            android:textSize="16sp"
            android:layout_marginBottom="24dp"
            android:textColor="@android:color/black"/>

        <Button
            android:id="@+id/btn_calcular"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calcular"
            android:backgroundTint="@color/blue_dark"
            android:textColor="@android:color/white"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tv_resultado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@android:color/black"/>
    </LinearLayout>

</ScrollView>
